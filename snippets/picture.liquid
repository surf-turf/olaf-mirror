<picture>
  <source srcset="{{ image | image_url: width: 1200 }}" media="(min-width: 1200px)">
  <source srcset="{{ image | image_url: width: 1100 }}" media="(min-width: 1100px)">
  <source srcset="{{ image | image_url: width: 1000 }}" media="(min-width: 1000px)">
  <source srcset="{{ image | image_url: width: 900 }}" media="(min-width: 900px)">
  <source srcset="{{ image | image_url: width: 800 }}" media="(min-width: 800px)">
  <source srcset="{{ image | image_url: width: 700 }}" media="(min-width: 700px)">
  <img
    src="{{ image | image_url: width: 280 }}"
    alt="{{ image.alt }}"
    width="147"
    height="213"
    class="{{ class }}"
    loading="lazy"
  >
</picture>
