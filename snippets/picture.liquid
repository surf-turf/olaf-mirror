<picture>
  <source srcset="{{ image | image_url: width: 1260 }}" media="(min-width: 2500px)">
  <source srcset="{{ image | image_url: width: 986 }}" media="(min-width: 2000px)">
  <source srcset="{{ image | image_url: width: 746 }}" media="(min-width: 1500px)">
  <source srcset="{{ image | image_url: width: 586 }}" media="(min-width: 1200px)">
  <img
    src="{{ image | image_url: width: 280 }}"
    alt="{{ image.alt }}"
    width="147"
    height="213"
    class="{{ class }}"
    {% if productIndex > 4 %}
      loading="lazy"
      decoding="async"
    {% endif %}
  >
</picture>
