{{ 'snippet-cart-totals.css' | asset_url | stylesheet_tag }}

<section class="cart-totals" id="cart-totals">
  {% if cart.discount_applications != blank %}
    {% for discount_application in cart.discount_applications %}
      <div class="cart-totals__discount">
        <p class="discount-name">{{ discount_application.title }}</p>
        <p class="discount-price">
          {{ discount_application.total_allocated_amount | money_without_currency | remove: ',00' }}
          <span>{{ cart.currency.iso_code }}</span>
        </p>
      <div>
    {% endfor %}
  {% endif %}

  <div class="cart-totals__total">
    <p class="total">{{ 'sections.cart.total' | t }}</p>
    <p class="price">
      {{ cart.total_price | money_without_currency | remove: ',00' }}
      <span>{{ cart.currency.iso_code }}</span>
    </p>
  </div>

  <form action="{{ routes.cart_url }}" method="post" id="cart" class="checkout-form">
    <button class="button button--primary cart__checkout-button button" name="checkout" form="cart" id="checkoutButton">
      {{ 'sections.cart.checkout' | t }}
    </button>
  </form>
</section>
