<section class="full-width" style="grid-row: {{ block.settings.grid_position }}">
  <div class="full-width__inner">
    <a
      {% if block.settings.url != blank %}
        href="{{ section.settings.url }}"
      {% endif %}
      class="full-width__link image-holder"
    >
      {% if block.settings.video_url != blank %}
        <video class="image-holder__image" playsinline muted autoplay loop>
          <source src="{{ block.settings.video_url }}">
        </video>
      {% else %}
        {% if block.settings.image != blank %}
          {{
            block.settings.image
            | image_url: width: 2048
            | image_tag: sizes: '(min-width: 750px) calc(100vw - 22rem), 1920px', class: 'image-holder__image'
          }}
        {% endif %}
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <div class="subtitle" style="color: {{ block.settings.color }}">
          {{ block.settings.subtitle }}
        </div>
      {% endif %}
    </a>
  </div>
</section>
