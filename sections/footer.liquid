<div class="footer__inner">
  {% comment %}
    <div class="title-holder">
      <h2 class="title-holder__title">Olaf</h2>
    </div>
  {% endcomment %}

  {% if section.settings.footer_logo != blank %}
    <div class="image-holder">
      {{
        section.settings.footer_logo
        | image_url: width: 35
        | image_tag: section.settings.logo.alt, 'image-holder__image'
      }}
    </div>
  {% endif %}

  <nav class="nav">
    <div class="nav__inner">
      {% for item in section.settings.footer_nav.links %}
        <ul class="nav__list">
          <li class="nav__item">
            <a href="{{ item.url }}" class="nav__link">{{ item.title }}</a>
          </li>

          <div class="children">
            {% for child_link in item.links %}
              <li class="nav__child">
                <a
                  href="{{ child_link.url }}"
                  {% if child_link.url contains 'http' %}
                    target="blank"
                  {% endif %}
                >
                  {{- child_link.title -}}
                </a>
              </li>
            {% endfor %}
          </div>
        </ul>
      {% endfor %}
    </div>
    <p class="copyright">Copyright Â© 2020 OLAF HUSSEIN</p>
  </nav>
</div>
<!-- end .footer__inner -->

{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "class": "footer",
  "settings": [
    {
      "id": "footer_nav",
      "type": "link_list",
      "label": "Footer navigation list"
    },
    {
      "id": "footer_logo",
      "type": "image_picker",
      "label": "Footer logo"
    }
  ]
}
{% endschema %}
