[
  {
    "name": "theme_info",
    "theme_name": "Surf & Turf",
    "theme_version": "0.0.5",
    "theme_author": "Surf & Turf",
    "theme_documentation_url": "https://github.com/surf-turf/marlin/wiki",
    "theme_support_url": "https://github.com/surf-turf/marlin/issues"
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Pick your base font"
      },
      {
        "type": "font_picker",
        "id": "base_font",
        "label": "Font",
        "default": "avenir_next_n4"
      },
      {
        "type": "paragraph",
        "content": "Check to include dedicated italic specimens"
      },
      {
        "type": "checkbox",
        "id": "base_font_italics",
        "label": "Use font italics",
        "default": false
      },
      {
        "type": "paragraph",
        "content": "Only check weights that are available for the chosen font"
      },
      {
        "type": "checkbox",
        "id": "base_font_100",
        "label": "Use font weight 100",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "base_font_200",
        "label": "Use font weight 200",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "base_font_300",
        "label": "Use font weight 300",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "base_font_400",
        "label": "Use font weight 400",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "base_font_500",
        "label": "Use font weight 500",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "base_font_600",
        "label": "Use font weight 600",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "base_font_700",
        "label": "Use font weight 700",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "base_font_800",
        "label": "Use font weight 800",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "base_font_900",
        "label": "Use font weight 900",
        "default": false
      },
      {
        "type": "header",
        "content": "Check if your theme supports custom fonts. Surf&Turf needs to set the fonts."
      },
      {
        "type": "checkbox",
        "id": "use_custom_fonts",
        "label": "Use custom fonts",
        "default": false
      }
    ]
  },
  {
    "name": "t:settings_schema.social_media.name",
    "settings": [
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "t:settings_schema.social_media.settings.social_twitter_link.label",
        "info": "t:settings_schema.social_media.settings.social_twitter_link.info"
