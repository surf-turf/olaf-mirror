  {
    "name": "t:settings_schema.favicon.name",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "t:settings_schema.favicon.settings.favicon.label",
        "info": "t:settings_schema.favicon.settings.favicon.info"
      }
    ]
  },
  {
    "name": "t:settings_schema.currency_format.name",
    "settings": [
      {
        "type": "header",
        "content": "t:settings_schema.currency_format.settings.content"
      },
      {
        "type": "paragraph",
        "content": "t:settings_schema.currency_format.settings.paragraph"
      },
      {
        "type": "checkbox",
        "id": "currency_code_enabled",
        "label": "t:settings_schema.currency_format.settings.currency_code_enabled.label",
        "default": true
      }
    ]
  },
  {
    "name": "Collection settings",
    "settings": [
      {
        "type": "header",
        "content": "Collection settings"
      },
      {
        "type": "paragraph",
        "content": "Amount of products to be shown on the first view."
      },
      {
        "type": "range",
        "id": "collection_products_view",
        "min": 6,
        "max": 48,
        "step": 3,
        "label": "Products",
        "default": 18
      }
    ]
  },
  {
    "name": "Cart settings",
    "settings": [
      {
        "type": "header",
        "content": "Cart"
      },
      {
        "type": "text",
        "id": "cart_intro_title",
        "label": "Cart intro title"
      },
      {
        "type": "richtext",
        "id": "cart_intro_text",
        "label": "Cart intro subtitle"
      },
      {
        "type": "header",
        "content": "Cart empty state"
      },
      {
        "type": "text",
        "id": "empty_cart_intro_title",
        "label": "Empty cart intro title"
      },
      {
        "type": "richtext",
        "id": "empty_cart_intro_text",
        "label": "Empty cart intro subtitle"
      }
    ]
  },
  {
    "name": "Gift card",
    "settings": [
      {
        "id": "gift_card_background",
        "type": "image_picker",
        "label": "Gift card background image"
      },
      {
        "id": "gift_card_title",
        "type": "textarea",
        "label": "Gift card Title"
      },
      {
        "id": "gift_card_explanation",
        "type": "textarea",
        "label": "Gift card explanation above the QR code"
      }
    ]
  }
